extends layout 

block content 
  h1 Send a Message, #{username} !
  h2 Only Members will know it's from you!

  form(method="POST" action="")
    .form-group 
      label(for="message") Your Message:
      input#message.form-control(type="text" name="message" required="true")
    button.btn.btn-primary(type="submit") Send
  
  if errors 
    ul
      for error in errors
        li!=error