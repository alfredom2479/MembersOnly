extends layout 

block content 
  h1=title 

  form(method='POST' action='')
    .form-group 
      label(for='first_name') First Name: 
      input#first_name.form-control(type='text' placeholder='First Name' name='first_name' required='true' value=(user===undefined ? '' : user.first_name))
      label(for='last_name') Last Name: 
      input#last_name.form-control(type='text' placeholder='Last Name' name='last_name' required='true' value=(user===undefined ? '' : user.last_name))
    .form-group
      label(for='username') Username: 
      input#email.form-control(type="text" placeholder='Username', name='username' required='true' value=(user===undefined ? '' : user.username))
      label(for='email') Email: 
      input#email.form-control(type="text" placeholder='Email' name='email' required='true' value=(user===undefined ? '' : user.email))
    .form-group
      label(for='password') Password: 
      input#password.form-control(type='password' name='password' required='true')
      label(for='confirm_password') Confirm Password: 
      input#confirm_password.form-control(type='password' name='confirm_password' required='true')
    button.btn.btn-primary(type='submit') Register

  if errors 
    ul 
      for error in errors 
        li!=error.msg